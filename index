    <script>  
        const prestadores = [];  
        
        async function loadCSV() {  
            const csvFiles = ['prestadores1.csv', 'prestadores2.csv'];  
            for (const file of csvFiles) {  
                const response = await fetch(file);  
                const data = await response.text();  
                const rows = data.trim().split('\n');  

                rows.slice(1).forEach(row => {  
                    const columns = row.split(';');  
                    if (columns.length > 1) {  
                        prestadores.push({  
                            nroPrestador: columns[0],  
                            prestador: columns[1],  
                            plan: columns[2],  
                            tipo: columns[3],  
                            especialidad: columns[4],  
                            seccional: columns[5],  
                            localidad: columns[6],  
                            domicilioWeb: columns[7],  
                            telefonoWeb: columns[8]  
                        });  
                    }  
                });  
            }  
            displayData(prestadores);  
            updateLocalidades(); // Para inicializar las localidades  
        }  

        function updateLocalidades() {  
            const seccionalSelect = document.getElementById('seccional');  
            const localidadSelect = document.getElementById('localidad');  
            const selectedSeccional = seccionalSelect.value;  

            // Resetear localidades  
            localidadSelect.innerHTML = '<option value="">Todas</option>';  

            // Filtrar localidades  
            const localidades = new Set();  
            prestadores.forEach(item => {  
                if (item.seccional === selectedSeccional) {  
                    localidades.add(item.localidad);  
                }  
            });  

            // Agregar localidades únicas al select  
            localidades.forEach(localidad => {  
                const option = document.createElement('option');  
                option.value = localidad;  
                option.textContent = localidad;  
                localidadSelect.appendChild(option);  
            });  
        }  

        function displayData(data) {  
            const tableBody = document.getElementById('tableBody');  
            tableBody.innerHTML = '';  

            if (data.length === 0) {  
                tableBody.innerHTML = `  
                    <tr class="text-center">  
                        <td colspan="8" class="p-4 text-gray-500">  
                            <span class="italic">No se encontraron resultados que coincidan con los filtros aplicados.</span>  
                        </td>  
                    </tr>  
                `;  
                return;  
            }  

            data.forEach(item => {  
                const rowClass = item.plan === 'UNIVERSAL' ? 'universal' : item.plan === 'SUPERADOR' ? 'superador' : '';  
                const row = `  
                    <tr class="${rowClass}">  
                        <td class="border p-2">${item.nroPrestador || 'N/A'}</td>  
                        <td class="border p-2">${item.prestador || 'N/A'}</td>  
                        <td class="border p-2">${item.plan || 'N/A'}</td>  
                        <td class="border p-2">${item.tipo || 'N/A'}</td>  
                        <td class="border p-2">${item.especialidad || 'N/A'}</td>  
                        <td class="border p-2">${item.localidad || 'N/A'}</td>  
                        <td class="border p-2">${item.domicilioWeb || 'N/A'}</td>  
                        <td class="border p-2">${item.telefonoWeb || 'N/A'}</td>  
                    </tr>  
                `;  
                tableBody.insertAdjacentHTML('beforeend', row);  
            });  
        }  

        // Los demás métodos (filterData, updateEspecialidades) siguen igual...  

        document.getElementById('plan').addEventListener('change', filterData);  
        document.getElementById('seccional').addEventListener('change', filterData);  
        document.getElementById('tipo').addEventListener('change', filterData);  
        document.getElementById('especialidad').addEventListener('change', filterData);  

        loadCSV();  
    </script>  
</body>  
