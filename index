        <!-- Tabla de Prestadores -->  
        <table id="prestadoresTable" class="table-auto w-full border-collapse border">  
            <thead>  
                <tr class="bg-gray-200">  
                    <th class="border p-2">NroPrestador</th>  
                    <th class="border p-2">NOMBRE COMPLETO DEL PRESTADOR</th>  
